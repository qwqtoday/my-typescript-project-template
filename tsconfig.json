{
    "compilerOptions": {
      "target": "es6",
      "module": "CommonJS",
      "lib": ["es2017", "es7", "es6", "dom"],
      "declaration": true,
      "outDir": "dist",
      "strict": false,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "skipLibCheck": true,
      "maxNodeModuleJsDepth": 0
    },
    "exclude": ["dist", "node_modules"],
    "include": ["src"]
  }